<h3>Student Form</h3>

<%= form_tag students_path do %>

  <label>Student first name:</label><br>
  <input type="text" name="student[first_name]" id="student_first_name" />

  <label>Student last name:</label><br>
  <input type="text" name="student[last_name]" id="student_last_name" />

  <input type="submit" name="commit" value="Submit Student" />

<% end %>